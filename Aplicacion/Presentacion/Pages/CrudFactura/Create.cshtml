@page
@model Presentacion.Pages.CrudFactura.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Factura</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Factura.NumeroFactura" class="control-label"></label>
                <input asp-for="Factura.NumeroFactura" class="form-control" />
                <span asp-validation-for="Factura.NumeroFactura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Factura.Sucursal" class="control-label"></label>
                <input asp-for="Factura.Sucursal" class="form-control" />
                <span asp-validation-for="Factura.Sucursal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Factura.CantidadProductos" class="control-label"></label>
                <input asp-for="Factura.CantidadProductos" class="form-control" />
                <span asp-validation-for="Factura.CantidadProductos" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Factura.CompraVenta" /> @Html.DisplayNameFor(model => model.Factura.CompraVenta)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
